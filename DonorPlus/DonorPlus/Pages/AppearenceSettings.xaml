<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DonorPlus.AppearenceSettings"
             Title="Внешний вид">

    <ContentPage.Content>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="350"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid RowSpacing="-1">

                <Grid Grid.Row="0">

                    <Grid RowSpacing="-1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <StackLayout
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand">

                                <Label
                                    x:Name="SettingLabel"
                                    Text="Внешний вид"
                                    FontSize="Medium"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    FontAttributes="Bold">

                                </Label>

                            </StackLayout>

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">

                                <Label
                                    x:Name="DarkThemeLabel"
                                    Text="Темная тема"
                                    FontSize="Small"
                                    Margin="20, 0, 0, 0"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Start"
                                    VerticalTextAlignment="Center"/>

                            </Grid>

                            <Grid Grid.Column="1">

                                <Switch
                                    x:Name="DarkThemeSwitch"
                                    IsToggled="False"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    OnColor="Green"
                                    Toggled="DarkThemeSwitch_Toggled">

                                </Switch>

                            </Grid>

                        </Grid>

                        <Grid Grid.Row="2"/>

                        <Grid Grid.Row="3"/>

                    </Grid>

                </Grid>

            </Grid>

        </Grid>

    </ContentPage.Content>

</ContentPage>