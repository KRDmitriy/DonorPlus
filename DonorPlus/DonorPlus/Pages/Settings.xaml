            <Grid RowSpacing="-1" x:Name="MainGrid">

                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid RowSpacing="-1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <StackLayout
                            x:Name="MenuStack">
                            </StackLayout>

                        </Grid>

                        <Grid Grid.Row="1">

                            <StackLayout
                            x:Name="ProfileStack">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer
                                    x:Name="AppearenceButton"
                                    Tapped="GoToAppearence"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                        </Grid>

                        <Grid Grid.Row="2">

                            <StackLayout
                            x:Name="MapsStack">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer
                                    x:Name="NotifSettingsButton"
                                    Tapped="GoToNotifSettings"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                        </Grid>

                        <Grid
                        Grid.Row="3">

                            <StackLayout
                            x:Name="InfoStack">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer
                                    x:Name="ExitButton"
                                    Tapped="ExitButton_Tapped"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                        </Grid>

                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                </Grid>

            </Grid>

        </StackLayout>

